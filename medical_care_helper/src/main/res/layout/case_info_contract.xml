<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/Margins">

            <TextView
                android:id="@+id/b05_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/openhuninn"
                android:gravity="center"
                android:text="合約資訊"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/b05_t001"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/b05_title"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/openhuninn"
                android:text="@string/b05_t001"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/b05_t002"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/b05_t001"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/openhuninn"
                android:text="@string/b05_t002"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/b05_t003"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/b05_t002"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/openhuninn"
                android:text="@string/b05_t003"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/b05_img001"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_below="@+id/b05_t003"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/good_morning_img" />
        </RelativeLayout>
    </ScrollView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nav_view2"
        android:layout_marginBottom="0dp"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/bottom_navigation1" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/bottom_navigation2" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        android:visibility="gone"
        app:menu="@menu/bottom_navigation3">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        android:visibility="gone"
        app:menu="@menu/bottom_navigation4" />
</RelativeLayout>