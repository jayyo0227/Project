<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/nav_view1"
        android:layout_below="@+id/nav_view3"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/Margins">

            <TextView
                android:id="@+id/c02_t001"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:fontFamily="@font/openhuninn"
                android:gravity="center_vertical"
                android:text="日期"
                android:textColor="#119c92"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/c02_e001"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignTop="@+id/c02_t001"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/c02_t001"
                android:layout_toRightOf="@+id/c02_t001"
                android:autofillHints=""
                android:ems="10"
                android:gravity="center_vertical"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/c02_t002"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_below="@+id/c02_t001"
                android:layout_alignStart="@+id/c02_t001"
                android:layout_alignLeft="@+id/c02_t001"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/openhuninn"
                android:gravity="center_vertical"
                android:text="心跳"
                android:textColor="#119c92"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/c02_e009"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/c02_t001"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/c02_t002"
                android:layout_toRightOf="@+id/c02_t002"
                android:autofillHints=""
                android:backgroundTint="@android:color/background_light"
                android:ems="10"
                android:gravity="center_vertical"
                android:inputType="phone"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/c02_t003"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_below="@+id/c02_t002"
                android:layout_alignStart="@+id/c02_t002"
                android:layout_alignLeft="@+id/c02_t002"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/openhuninn"
                android:gravity="center_vertical"
                android:text="收縮壓"
                android:textColor="#119c92"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/c02_e002"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/c02_t002"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/c02_t003"
                android:layout_toRightOf="@+id/c02_t003"
                android:autofillHints=""
                android:backgroundTint="@android:color/background_light"
                android:ems="10"
                android:gravity="center_vertical"
                android:importantForAutofill="no"
                android:inputType="phone"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/c02_t004"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_below="@+id/c02_t003"
                android:layout_alignStart="@+id/c02_t003"
                android:layout_alignLeft="@+id/c02_t003"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/openhuninn"
                android:gravity="center_vertical"
                android:text="舒張壓"
                android:textColor="#119c92"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/c02_e003"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignTop="@+id/c02_t004"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/c02_t004"
                android:backgroundTint="@android:color/background_light"
                android:ems="10"
                android:enabled="false"
                android:fontFamily="@font/openhuninn"
                android:gravity="center_vertical"
                android:importantForAutofill="no"
                android:inputType="phone"
                android:textColor="@color/Gray"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/c02_s003"
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:layout_below="@+id/c02_t004"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/c02_t005"
                android:layout_toRightOf="@+id/c02_t005"
                android:entries="@array/c01_a001"
                android:gravity="center_vertical"
                android:spinnerMode="dialog" />

            <TextView
                android:id="@+id/c02_t005"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_below="@+id/c02_t004"
                android:layout_alignStart="@+id/c02_t004"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/openhuninn"
                android:gravity="center_vertical"
                android:text="血糖"
                android:textColor="#119c92"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/c02_e004"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/c02_e003"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/c02_s003"
                android:layout_toRightOf="@+id/c02_s003"
                android:autofillHints=""
                android:backgroundTint="@android:color/background_light"
                android:ems="10"
                android:gravity="center_vertical"
                android:inputType="phone"
                android:textSize="18sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/c02_t006"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_below="@+id/c02_t005"
                android:layout_alignStart="@+id/c02_t005"
                android:layout_alignLeft="@+id/c02_t005"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/openhuninn"
                android:gravity="center_vertical"
                android:text="體重"
                android:textColor="#119c92"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/c02_e2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/c02_e004"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/c02_t006"
                android:layout_toRightOf="@+id/c02_t006"
                android:autofillHints=""
                android:backgroundTint="@android:color/background_light"
                android:ems="10"
                android:gravity="center_vertical"
                android:inputType="phone"
                android:textSize="18sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/c02_e005"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/c02_t006"
                android:layout_alignStart="@+id/c02_t006"
                android:layout_alignLeft="@+id/c02_t006"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:autofillHints=""
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textAutoCorrect" />


            <TextView
                android:id="@+id/c02_t007"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_below="@+id/c02_e005"
                android:layout_alignStart="@+id/c02_e005"
                android:layout_alignLeft="@+id/c02_e005"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/openhuninn"
                android:gravity="center_vertical"
                android:text="還有啥"
                android:textColor="#119c92"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/c02_e006"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignTop="@+id/c02_t007"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/c02_t007"
                android:layout_toRightOf="@+id/c02_t007"
                android:autofillHints=""
                android:ems="10"
                android:gravity="center_vertical"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/c02_t008"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_below="@+id/c02_t007"
                android:layout_alignStart="@+id/c02_t007"
                android:layout_alignLeft="@+id/c02_t007"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/openhuninn"
                android:gravity="center_vertical"
                android:text="還有啥"
                android:textColor="#119c92"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/c02_t009"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_below="@+id/c02_t008"
                android:layout_alignStart="@+id/c02_t008"
                android:layout_alignLeft="@+id/c02_t008"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/openhuninn"
                android:gravity="center_vertical"
                android:text="還有啥"
                android:textColor="#119c92"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/c02_e007"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignTop="@+id/c02_t009"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/c02_t009"
                android:layout_toRightOf="@+id/c02_t009"
                android:autofillHints=""
                android:ems="10"
                android:gravity="center_vertical"
                android:inputType="phone" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/c02_t009"
                android:layout_alignStart="@+id/c02_t009"
                android:layout_alignLeft="@+id/c02_t009"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/c02_b001"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_style_white"
                    android:fontFamily="@font/openhuninn"
                    android:text="@string/b02_b001"
                    android:textColor="#54bfb8"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/c02_b002"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_style"
                    android:fontFamily="@font/openhuninn"
                    android:text="@string/b02_b002"
                    android:textColor="#e6fcfb"
                    android:textSize="18sp" />
            </TableRow>

        </RelativeLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        android:visibility="gone"
        app:menu="@menu/bottom_navigation3">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        android:visibility="gone"
        app:menu="@menu/bottom_navigation4" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nav_view2"
        android:layout_marginBottom="0dp"
        android:background="#f5f5f5"
        app:menu="@menu/bottom_navigation1" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#f5f5f5"
        app:menu="@menu/bottom_navigation2" />


</RelativeLayout>